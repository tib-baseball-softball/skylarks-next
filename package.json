{
  "name": "skylarks-diamond-planner",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "extract": "dotenvx run -- wuchale",
    "clean": "dotenvx run -- wuchale --clean",
    "preview": "vite preview",
    "test": "dotenvx run -- vitest && pnpm test:e2e",
    "sv-check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "generate:types": "typed-pocketbase -d src/lib/model",
    "test:e2e": "dotenvx run -- playwright test",
    "test:ui": "dotenvx run -- playwright test --ui",
    "test:unit": "dotenvx run -- vitest",
    "format": "biome format --write",
    "lint": "biome lint --write",
    "check": "biome check --write"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@dotenvx/dotenvx": "^1.51.2",
    "@playwright/test": "^1.57.0",
    "@sveltejs/adapter-static": "^3.0.10",
    "@sveltejs/kit": "^2.49.2",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@tigawanna/typed-pocketbase": "^0.1.6",
    "@types/leaflet": "^1.9.21",
    "@types/node": "24.10.1",
    "@vincjo/datatables": "^2.8.0",
    "@wuchale/svelte": "^0.18.0",
    "@wuchale/vite-plugin": "^0.16.1",
    "apexcharts": "^4.7.0",
    "bits-ui": "^2.14.4",
    "bsm.js": "^0.3.0",
    "diamond-planner-frontend": "workspace:*",
    "flatpickr": "^4.6.13",
    "leaflet": "^1.9.4",
    "lucide-svelte": "^0.556.0",
    "pocketbase": "^0.26.5",
    "svelte": "^5.46.1",
    "svelte-check": "^4.3.5",
    "svelte-persisted-state": "^1.2.0",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vitest": "^3.2.4",
    "wuchale": "^0.19.0"
  },
  "type": "module",
  "overrides": {
    "typed-pocketbase": {
      "pocketbase": "$pocketbase"
    }
  }
}
