##########################################
# Common Settings
##########################################

root = true

# All Files
[*]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

##########################################
# File Extension Settings
##########################################

[*.{xml,config}]
indent_size = 2

[*.{json,json5,webmanifest}]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[*.{md,mdx}]
trim_trailing_whitespace = false

[*.{htm,html,js,jsm,ts,tsx,cjs,mjs,mts,mtsx,css,sass,svg,vue,svelte}]
indent_size = 2